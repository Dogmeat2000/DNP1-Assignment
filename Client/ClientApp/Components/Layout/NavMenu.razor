@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="http://localhost:5106/forums/-1">DNP Forums 2024</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="#" @onclick="() => NavigateToForum(-1)" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Forums
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/RegisterUser">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Sign Up
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Error"> <!-- TODO: Update this link once implemented-->
                <span class="oi oi-list-rich" aria-hidden="true"></span> Login (Not implemented)
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/Error"> <!-- TODO: Update this link once implemented-->
                <span class="oi oi-list-rich" aria-hidden="true"></span> Logout (Not implemented)
            </NavLink>
        </div>
    </nav>
</div>


@code {

// Methods to have Blazor navigate the user to the links they click on - while updating the code from the server (prevents and issue where nothing happens when clicking a link):
    private void NavigateToForum(int forumId) {
        Navigation.NavigateTo($"/forums/{forumId}", forceLoad: true);
    }

}